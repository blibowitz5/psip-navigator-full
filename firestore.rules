rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to interactions collection for authenticated users
    // In production, you should implement proper authentication
    match /interactions/{interactionId} {
      // Allow read access for admin users (you can customize this)
      allow read: if request.auth != null && request.auth.token.admin == true;
      
      // Allow write access for server-side functions (Firebase Functions)
      // This is automatically allowed for Firebase Functions with admin SDK
      allow write: if request.auth != null;
      
      // For now, allow all access for development/testing
      // TODO: Implement proper authentication and authorization
      allow read, write: if true;
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

rules_version = '2';

// Firebase Storage rules for PSIP Navigator
service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all files
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // Allow write access for authenticated users (if you add auth later)
    match /{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
